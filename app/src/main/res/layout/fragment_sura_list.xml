<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:paddingBottom="@dimen/_16sdp"
    tools:context=".feature.show_sura_list.SuraListFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSura"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_16sdp"
        android:visibility="gone"
        tools:listitem="@layout/recycler_view_item" />

    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/spShowAyahs"
        style="@style/SpinKitView.Large.Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_16sdp"
        app:SpinKit_Color="@color/spin_color_ayahs" />


    <TextView
        android:id="@+id/tv_no_quran_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/tv_no_quran_data"
        android:textSize="@dimen/_17ssp"
        android:visibility="gone" />

</FrameLayout>